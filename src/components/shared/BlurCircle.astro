---
import type { TailwindColor } from "@/utils/types/tailwind";
import { MAP_COLOR_VARIANT_TO_BG } from "@/utils/mapVariants";

type Props = {
  position: "bottom" | "top";
  color: TailwindColor;
};

const { position, color } = Astro.props;
---

<div
  class:list={{
    [`fixed z-0 h-[200px] w-[200px] lg:w-[400px] lg:h-[400px] rounded-full ${MAP_COLOR_VARIANT_TO_BG[color]} blur-[50px] md:blur-[100px] opacity-25 top-[10px] lg:top-[20px]`]: true,
    ["left-0"]: position === "top",
    ["right-0"]: position === "bottom",
  }}
>
</div>